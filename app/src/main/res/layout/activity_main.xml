<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"

                   android:layout_weight="1" android:foreground="@mipmap/icon"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mainActTitleText"
                android:textSize="@dimen/mainActTitleTextSize"
                android:shadowColor="@color/colorBlack"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/mainActTitleClr"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:orientation="vertical">

        <Button android:id="@+id/mainActBtn01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="btnClick"
                android:text="@string/mainActSpiewnikiBtnText"
                android:textAllCaps="false"
                android:textSize="@dimen/mainActBtnTextSize"
                style="@style/Widget.AppCompat.Button.Colored"/>

        <Button android:id="@+id/mainActBtn02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/mainActBiblaBtnText"
                android:textAllCaps="false"
                android:textSize="@dimen/mainActBtnTextSize"
                style="@style/Widget.AppCompat.Button.Colored"/>

        <Button android:id="@+id/mainActBtn03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/mainActKsiazkiBtnText"
                android:textAllCaps="false"
                android:textSize="@dimen/mainActBtnTextSize"
                style="@style/Widget.AppCompat.Button.Colored"/>

        <Button android:id="@+id/mainActBtn04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/mainActNagraniaBtnText"
                android:textAllCaps="false"
                android:textSize="@dimen/mainActBtnTextSize"
                style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>

</LinearLayout>